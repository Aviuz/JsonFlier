<UserControl x:Class="JsonFlier.UserControls.TabsControl.ExtendedTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JsonFlier.UserControls.TabsControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ControlTemplate x:Key="tabControlTemplate" TargetType="TabControl">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" IsItemsHost="True" />
                <Grid DockPanel.Dock="Top" Height="2" Background="#FF8EBCFF" />
                <Border BorderBrush="Gray" BorderThickness="1">
                    <Grid Background='White'>
                        <ContentPresenter ContentSource="SelectedContent"/>
                    </Grid>
                </Border>
            </DockPanel>
        </ControlTemplate>
    </UserControl.Resources>
    <TabControl x:Name="tabControl" Template="{StaticResource tabControlTemplate}">
    </TabControl>
</UserControl>
