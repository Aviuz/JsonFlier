<UserControl x:Class="JsonFlier.UserControls.LogContainers.JsonLogger.JsonPresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JsonFlier.UserControls.LogContainers.JsonLogger"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="DetailsGrid" Background="#FFDDDDDD">
        <Grid.RowDefinitions>
            <RowDefinition Height="24px"/>
            <RowDefinition Height="18px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Name="treeViewTitle" FontWeight="Bold" FontSize="18" Margin="5,0,0,0"/>
        <StackPanel Grid.Row="1" x:Name="toolBar" Background="Transparent" Orientation="Horizontal" Visibility="Hidden" Margin="3 0"/>
        <TreeView Grid.Row="2" Name="treeView" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <TextBox Grid.Row="2" Name="textBoxLongText" TextWrapping="Wrap" Background="{x:Null}" BorderThickness="0" IsReadOnly="True" Visibility="Collapsed"/>
    </Grid>
</UserControl>
