<UserControl x:Class="JsonFlier.UserControls.Toolbar.Actions.SimpleAction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JsonFlier.UserControls.Toolbar.Actions"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="24">
    <Button x:Name="button" Height="24" Width="24" Click="Button_Click">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Grid x:Name="backgroundGrid" Background="Transparent">
                    <ContentPresenter />
                </Grid>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter TargetName="backgroundGrid" Property="Background" Value="#FFA6A6A6"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Button.Template>
        <Button.Content>
            <Image x:Name="iconImage" Height="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Button.Content>
    </Button>
</UserControl>
