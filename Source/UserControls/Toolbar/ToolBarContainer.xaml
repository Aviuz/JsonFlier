<UserControl x:Class="JsonFlier.UserControls.Toolbar.ToolBarContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JsonFlier.UserControls.Toolbar"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ToolBarTray x:Name="toolbarTray">
        <ToolBarTray.Resources>
            <Style TargetType="ToolBar" >
                <Setter Property="Height" Value="{Binding ElementName=toolbarTray, Path=ActualHeight}"/>
            </Style>
        </ToolBarTray.Resources>
    </ToolBarTray>
</UserControl>
