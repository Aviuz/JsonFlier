<Window x:Class="JsonFlier.UIControls.About.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JsonFlier.UIControls.About"
        mc:Ignorable="d"
        Title="About" Height="450" Width="800" Icon="/Resources/AppIcon.ico" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <ResourceDictionary Source="/UIControls/DefaultStyles.xaml"/>
    </Window.Resources>
    <StackPanel>
        <TextBlock FontWeight="SemiBold" >About JsonFlier</TextBlock>
        <TextBlock x:Name="versionText" Loaded="TextBlock_Loaded">Current version: </TextBlock>
        <TextBlock Margin="0 5 0 10">
            <Run>JsonFlier is log viewer for structured logs. It's currently a work in progress poject, and it's not production ready.</Run>
        </TextBlock>
        <local:IconsInfoControl/>
    </StackPanel>
</Window>
